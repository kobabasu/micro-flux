{
  "name": "flux-app",
  "version": "0.0.1",
  "description": "flux minimum app",
  "main": "sample/dist/app.js",
  "repository": {
    "type": "git",
    "url": "//github.com/kobabasu/micro-flux.git"
  },
  "keywords": [
    "es6",
    "react",
    "react-router",
    "flux"
  ],
  "os": [
    "darwin",
    "linux",
    "!win32"
  ],
  "dependencies": {
    "react": "*",
    "react-router": "1.0.0-beta3",
    "react-document-title": "*",
    "object-assign": "*",
    "flux": "*"
  },
  "devDependencies": {
  },
  "browser": {
  },
  "browserify": [ "js", "jsx" ],
  "eslintConfig": {
    "parser": "babel-eslint"
  },
  "scripts": {
    "preinstall": "npm install -g babel babel-eslint browserify",
    "start": "NODE_ENV=production NODE_PATH=js src dist",
    "babel": "babel ./ --out-dir ../js --ignore ../node_modules/",
    "browserify": "browserify -d --compact false ../js/app.js > ../dist/build.js",
    "build": "npm run babel; npm run browserify",
    "build:sample": "babel ./ --out-dir ./sample/js --ignore ./sample/,./node_modules/; browserify -d --compact false ./sample/js/app.js > ./sample/dist/build.js" 
  },
  "preferGlobal": true,
  "author": "kobabasu",
  "license": "MIT"
}
